<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <Button
            android:id="@+id/prev"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Prev" />
        <Button
            android:id="@+id/playSongs"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="PlaySongs" />
        <Button
            android:id="@+id/playMV"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="PlayMV" />
        <Button
            android:id="@+id/next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Next" />
        <Button
            android:id="@+id/play"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Play" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/mv_play"
        android:layout_width="344dp"
        android:layout_height="188dp"
        android:layout_gravity="center"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">
    </FrameLayout>
    <com.tencent.qqmusictvsdk.lyric.TwoLineLyricLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:hiLightColor="#000000"
        app:hiLightSize="26dp"
        app:hiLightThinColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:marginLine="9dp"
        app:singleLine="true"
        app:textSize="26dp"
        app:textThinColor="#000000" />


</androidx.constraintlayout.widget.ConstraintLayout>